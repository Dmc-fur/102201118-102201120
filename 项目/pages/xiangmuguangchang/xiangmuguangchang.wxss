/* 底部三选项分段器 */
.bottom-segmented-control {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #f8f8f8;
  border-top: 1px solid #e5e5e5;
}

.segment {
  flex: 1;
  padding: 30px;
  text-align: center;
  font-size: 16px;
  color: #333;
}

.selected {
  color: #007aff;
  font-weight: bold;
}

/* 顶部三选项分段器 */
.top-segmented-control {
  display: flex;
  justify-content: space-around;
  margin-top: 88px;
  height: 50px;
}

/* 顶部分段器按钮样式 */
.segment {
  flex: 1;
  /*padding: 10px;*/
  text-align: center;
  font-size: 16px;
  line-height: 0px;
  color: #333;
}

.selected {
  color: #007aff;
  font-weight: bold;
}

.search-bar {
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
  padding: 0 20px;
}

.search-input {
  flex: 3;
  padding: 10px;
  border: 1px solid #0a0a0a;
  border-radius: 4px;
}

.create-project-button {
  flex: 1;
  margin-left: 10px;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 14px;
}
/* 项目卡片样式 */
.project-card {
  width: 86%;
  border: 1px solid #000;
  border-radius: 4px;
  padding: 15px;
  margin-top: 30px; /* 设置距离搜索框的间距 */
  margin-right: auto;
  margin-left: auto;
}

.project-title {
  font-weight: bold;
  font-size: 18px;
  margin-bottom: 10px;
}

.project-info {
  margin-top: 10px;
  margin-right: 0px;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  position: relative;
}

.tag {
  padding: 5px 10px;
  border: 1px solid #007aff;
  border-radius: 8px;
  margin-right: 10px;
  font-size: 12px;
  color: #007aff;
}

.date {
  position: absolute;
  right: 0px;
  bottom: 0px;
  font-size: 12px;
  color: #666;
}

/* 设置两个项目卡片之间的间距 */
.project-card + .project-card {
  margin-top: 5px;
}


