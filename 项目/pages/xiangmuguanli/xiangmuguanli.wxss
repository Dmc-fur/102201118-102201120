.project-management-page {
  position: relative;
  padding-bottom: 60px; /* 为底部分段器留出空间 */
}

/* 顶部分段器 */
.top-segmented-control {
  display: flex;
  justify-content: space-around;
  margin-top: 88px;
  height: 50px;
}

/* 正方形按钮区域 */
.button-container {
  display: flex;
  justify-content: space-around;
  margin-top: 30px;
}

.square-button {
  width: 120px;
  height: 120px;
  background-color: #f0f0f0;
  text-align: center;
  line-height: 120px;
  font-size: 16px;
  color: #333;
  border-radius: 10px;
}

/* 项目卡片 */
.project-list {
  margin-top: 30px;
}

.project-card {
  width: 86%;
  border: 1px solid #000;
  border-radius: 4px;
  padding: 15px;
  margin: 10px auto;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: rgb(33, 218, 110); /* 可以用背景图片代替 */
}

.project-info {
  margin-top: 10px;
}

.name {
  font-size: 18px;
  font-weight: bold;
}

/* 卡片操作按钮 */
.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}

.action-button {
  padding: 5px 15px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 14px;
}

.bottom-segmented-control {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #f8f8f8;
  border-top: 1px solid #e5e5e5;
}

.segment {
  flex: 1;
  padding: 30px;
  text-align: center;
  font-size: 16px;
  color: #333;
}

.selected {
  color: #007aff;
  font-weight: bold;
}

/* 弹出任务框样式 */
.task-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top: 1px solid #ccc;
  padding: 20px;
  box-shadow: 0 -1px 10px rgba(0, 0, 0, 0.1);
}

.popup-title {
  font-weight: bold;
  font-size: 18px;
  margin-bottom: 10px;
}

.task-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
}

.confirm-button {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 4px;
  padding: 5px 10px;
}

.close-popup-button {
  background-color: #f5f5f5;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding: 5px 10px;
  margin-top: 10px;
}