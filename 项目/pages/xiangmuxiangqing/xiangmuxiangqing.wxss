/* 顶部白色矩形样式 */
.top-bar {
  width: 100%;
  height: 88px; /* 高度可以根据需要调整 */
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 10px;
}

.back-button {
  position: absolute;
  left: 20px;
  top: 33px;
  color: black;
  font-size: 18px;
}

.title {
  position: absolute;
  top: 33px;
  color: black;
  font-size: 20px;
}
/* 项目详情页面整体样式 */
.project-details-page {
  background-color: #f5f5f5;
  padding: 20px;
}

/* 滚动容器样式 */
.scroll-container {
  height: calc(100vh - 88px); /* 占满整个视窗高度 牛牛牛 无法完全滑动的原因在这里 */
  overflow-y: auto; /* 滚动 */
  -webkit-overflow-scrolling: touch; /* iOS 平滑滚动 */
  padding-bottom: 20px;
}

/* 每个分块的样式 */
.section {
  background-color: white;
  border-radius: 8px;
  padding: 20px;
  margin-bottom: 15px; /* 保持各分块之间的间距 */
  box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
}

/* 分块标题样式 */
.section-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 15px;
  color: #333;
}

/* 项目成员列表样式 */
.member-list .member {
  margin-top: 15px;
  margin-bottom: 10px;
}

.role {
  font-weight: bold;
  margin-right: 10px;
}

.name {
  color: #555;
}

/* 项目标签列表样式 */
.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15px; /* 标签之间的间距 */
}

.tag {
  background-color: #007aff;
  color: white;
  padding: 5px 10px;
  border-radius: 8px;
  font-size: 14px;
  margin-top: 15px;
}

/* 项目简介样式 */
.description {
  line-height: 1.6; /* 让文字更易阅读 */
  color: #555;
  font-size: 16px;
}

/* 人员需求标题 */
.section-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
}

/* 表头样式 */
.requirement-header {
  display: flex;
  font-weight: bold;
  margin-bottom: 10px;
}

.header-item {
  flex: 1;
  text-align: center;
  font-size: 16px;
}

/* 人员需求列表样式 */
.requirement-list {
  margin-top: 10px;
}

.requirement-item {
 /* display: flex;*/
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px; /* 每个项目需求的底部间距 */
}

/* 职位和人数的样式 */
.job, .number {
  flex: 1;
  text-align: center;
  font-size: 16px;
}

/* 申请按钮样式 */
.apply-button {
  padding: 5px 10px; /* 上下 5px，左右 15px */
  background-color: #007aff;
  color: white;
  border: 1px solid #007aff;
  border-radius: 4px;
  font-size: 14px;
  text-align: center;
}