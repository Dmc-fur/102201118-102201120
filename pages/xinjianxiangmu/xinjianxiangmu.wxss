input, textarea {
  flex: 1;
  margin-right: 10px;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.add-button, .delete-button, .confirm-button {
  margin-top: 10px;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 4px;
}

.delete-button {
  background-color: #ff3b30;
}