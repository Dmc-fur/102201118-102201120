.project-square-page {
  height: 100vh;
  padding: 20px;
  background-color: #FFFFFF;
}

/* 顶栏样式 */
.header {
  position: relative;
  width: 100%;
  height: 88px;  /* 高度88px */
  background-color: #fff; /* 顶栏背景颜色 */
  border-bottom: 1px solid #e5e5e5;
}

/* 返回按钮样式 */
.back-button {
  position: absolute;
  left: -50px;   /* 距离手机页面左边20px */
  top: 29px;    /* 距离手机顶部33px */
  font-size: 18px; /* 字体大小18px */
  background-color: #fff;
  color: #000000;
}

/* 标题样式 */
.title {
  position: absolute;
  left: 50%;
  top: 33px;   /* 距离手机顶部33px */
  transform: translateX(-70%); /* 水平居中 */
  font-size: 20px; /* 字体大小20px */
  font-weight: bold;
  color: #333;
}


.block {
  margin-top: 20px;
  padding: 10px;
  border: 1px solid #e5e5e5;
  border-radius: 8px;
  background-color: #FFFFFF;
}

.block-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
}

.form-row {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

