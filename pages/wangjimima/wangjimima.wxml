<view class="forgot-password-page">
  <!-- 顶部白色矩形，显示 返回 和 忘记密码 -->
  <view class="top-bar">
    <text class="back-button" bindtap="goBack">返回</text>
    <text class="title">忘记密码</text>
  </view>

  <view class="content">
    <!-- 请输入手机号码，显示在输入框上方 -->
    <view class="input-section">
      <text class="label">请输入手机号码</text>
      <view class="phone-input-container">
        <input class="phone-input" placeholder="请输入您的手机号" />
        <button class="verify-button">获取验证码</button>
      </view>
    </view>

    <!-- 下一步按钮 -->
    <button class="next-button" bindtap="Next">下一步</button>
  </view>
</view>